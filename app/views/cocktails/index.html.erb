<h1>Secret cocktail</h1>

<!-- Change img url to variable -->
<div class="cards">
  <% if @cocktails.length == 0 %>
    <%= link_to new_cocktail_path do %>
      <div class="card-category flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
        <i class="fab fa-tripadvisor"></i>
        <div>
            <p>Add a cocktail</p>
        </div>
      </div>
    <% end %>
  <% else %>
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face %>');">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% else %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card-category flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
            <i class="fab fa-tripadvisor"></i>
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
</div>

