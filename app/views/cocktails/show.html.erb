<h1> <%= @cocktail.name %> </h1>
<% if @cocktail.photo.attached? %>
  <%= cl_image_tag @cocktail.photo.key, width: 300, height: 300 =%>
<% end %>
<h2>
  <%= link_to new_cocktail_dose_path(@cocktail) do %>
    <i class="far fa-plus-square"> Add dose</i><br>
  <% end %>
</h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
  <li>
    <%= dose.description %> <%= dose.ingredient.name %>
    <%= link_to dose_path(dose), method: 'delete' do %>
      <i class="far fa-minus-square"></i>
    <% end %>
  </li>
  <% end %>
</ul>

